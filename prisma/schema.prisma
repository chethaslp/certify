generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Settings {
  id           Int      @id @default(1)
  smtpServer   String?
  smtpPort     String?
  smtpUsername String?
  smtpPassword String?
  senderEmail  String?
  senderName   String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Template {
  id              String   @id @default(uuid())
  name            String
  description     String?
  textFields      String   // JSON string of text fields
  backgroundImage String   // Base64 encoded image
  thumbnail       String?  // Base64 encoded thumbnail
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model EmailTemplate {
  id        String   @id @default(uuid())
  name      String
  subject   String
  content   String   // HTML content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

